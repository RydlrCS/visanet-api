                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"dateOfBirth\": \"1990-01-15\",\n  \"ssn\": \"123-45-6789\",\n  \"idType\": \"passport\",\n  \"idNumber\": \"P1234567\",\n  \"occupation\": \"Software Engineer\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/users/kyc",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "kyc"]
            }
          }
        }
      ]
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        }
      }
    }
  ]
}
