# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Visa API Configuration
VISA_API_URL=https://sandbox.api.visa.com

# Visa Direct API Credentials (Fund Transfer - Push/Pull/Reverse)
VISA_DIRECT_USER_ID=your_visa_direct_user_id
VISA_DIRECT_PASSWORD=your_visa_direct_password

# VisaNet Connect API Credentials (Authorization/Void)
VISANET_USER_ID=your_visanet_user_id
VISANET_PASSWORD=your_visanet_password
VISANET_PAYMENT_FACILITY_ID=your_payment_facility_id
VISANET_ACCEPTOR_ID=your_acceptor_id

# X-Pay-Token Configuration (Message Level Encryption)
VISA_SHARED_SECRET=your_base64_encoded_shared_secret_from_visa_portal
VISA_MLE_PRIVATE_KEY_PATH=./certs/privateKey-c70ff121-977b-4872-9b69-550b1c281755.pem
VISA_MLE_KEY_ID=c70ff121-977b-4872-9b69-550b1c281755

# MLE (Message Level Encryption) for Visa Direct
VISA_DIRECT_MLE_KEY_ID=your_visa_direct_mle_key_id
VISA_DIRECT_MLE_CLIENT_CERT=./certs/mle-client-cert-visa-direct.pem
VISA_DIRECT_MLE_PRIVATE_KEY=./certs/mle-private-key-visa-direct.pem
VISA_DIRECT_MLE_SERVER_CERT=./certs/mle-server-cert-visa-direct.pem

# MLE (Message Level Encryption) for VisaNet Connect
VISANET_MLE_KEY_ID=your_visanet_mle_key_id
VISANET_MLE_CLIENT_CERT=./certs/mle-client-cert-visanet.pem
VISANET_MLE_PRIVATE_KEY=./certs/mle-private-key-visanet.pem
VISANET_MLE_SERVER_CERT=./certs/mle-server-cert-visanet.pem

# Certificate paths (shared by both APIs)
VISA_CERT_PATH=./certs/cert.pem
VISA_KEY_PATH=./certs/key.pem
VISA_CA_PATH=./certs/ca.pem

# Webhook Configuration
WEBHOOK_URL=https://www.locapay.rydlr.com/visanet/webhook
WEBHOOK_SECRET=your_webhook_secret_key

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/visanet
DB_NAME=visanet

# JWT Configuration
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRATION=24h

# Application Configuration
APP_NAME=VisaNet API
APP_URL=https://www.locapay.rydlr.com
CORS_ORIGIN=https://www.locapay.rydlr.com

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key
