# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Visa API Configuration
VISA_API_URL=https://sandbox.api.visa.com
VISA_USER_ID=your_visa_user_id
VISA_PASSWORD=your_visa_password
VISA_CERT_PATH=./certs/cert.pem
VISA_KEY_PATH=./certs/key.pem
VISA_CA_PATH=./certs/ca.pem

# Webhook Configuration
WEBHOOK_URL=https://www.locapay.rydlr.com/visanet/webhook
WEBHOOK_SECRET=your_webhook_secret_key

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/visanet
DB_NAME=visanet

# JWT Configuration
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRATION=24h

# Application Configuration
APP_NAME=VisaNet API
APP_URL=https://www.locapay.rydlr.com
CORS_ORIGIN=https://www.locapay.rydlr.com

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key
